generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model AboutCourse {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  image     String?
  updatedAt DateTime @updatedAt
  details   String   @db.Text
}

model Collegiate {
  id        String   @id
  teacher   String
  segment   String
  email     String
  validity  String
  image     String?
  updatedAt DateTime
}

model CoursePurpose {
  id         String   @id
  title      String
  mission    String   @db.Text
  vision     String   @db.Text
  values     String   @db.Text
  principles String   @db.Text
  image      String?
  updatedAt  DateTime
}

model ProfissionalProfile {
  id        String   @id
  title     String
  content   String   @db.Text
  image     String?
  updatedAt DateTime
}

model Schedule {
  id        String   @id
  year      String
  semester  String
  link      String
  image     String?
  updatedAt DateTime
}

model TeachingCenter {
  id        String   @id
  teachers  String
  type      String
  email     String
  validity  String
  image     String?
  updatedAt DateTime
}

model ApliedGroup {
  id                String   @id @default(cuid())
  name              String
  notice            String
  developmentagency String
  value             String
  updatedAt         DateTime
}

model Phase {
  id       Int       @id @default(autoincrement())
  name     String
  subjects Subject[]
}

model Subject {
  id            Int    @id @default(autoincrement())
  phaseId       Int
  name          String
  CH            Int
  Credits       Int
  Prerequisites String
  phase         Phase  @relation(fields: [phaseId], references: [id])

  @@index([phaseId])
}

model Equivalence {
  id            Int      @id @default(autoincrement())
  name          String
  ch            Int
  equivalence   String   @db.Text
  chequivalence Int
  updatedAt     DateTime
}

model CourseProgram {
  id          Int      @id @default(autoincrement())
  description String
  link        String
  updatedAt   DateTime
}

model ElectiveSubjects {
  id            Int      @id @default(autoincrement())
  name          String
  ch            Int
  credits       Int
  prerequisites String
  updatedAt     DateTime
}

model Tcc {
  id          Int      @id @default(autoincrement())
  title       String
  resume      String   @db.Text
  projectarea String
  studentname String
  link        String
  updatedAt   DateTime
}

model Articles {
  id        Int      @id @default(autoincrement())
  title     String
  resume    String   @db.Text
  author    String
  link      String
  updatedAt DateTime
}
